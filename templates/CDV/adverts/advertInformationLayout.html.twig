{% extends "base.html.twig" %}

{% block title %}Annonce de {{advert.user.name}}{% endblock %}

{% block body %}

    <section class="global__container">
        <div class="card">
            {% if advert.user.filename %}
                <img src="{{vich_uploader_asset(advert.user, 'imageFile')}}" alt="">  
            {% else %}
                <img src="{{asset('images/profile/default-avatar.png')}}" alt="">  
            {% endif %}

            {% set difference = date("now").diff(date(advert.createdAt)) %}
            {% set leftDays = difference.days %}
            {% if leftDays <= 1 %}
                {% if leftDays < 1 %}
                    <p>Aujourd'hui</p>
                {% else %}
                    <p>Il y a un jour</p>
                {% endif %}
            {% else %}
                <p>Il y a {{ leftDays }} jours</p>
            {% endif %}   
            <h2>Demande de </h2>

            <p>{{advert.user.name}}</p>
            <p>{{advert.city}}</p>
            <p>{{advert.message}}</p>
            <a href="{{path('delivery',{id:advert.id})}}"><button class="btn btn--card">Je livre</button></a>
        </div>
    </section>


{% endblock %}