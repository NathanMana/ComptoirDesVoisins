<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="author" content="Nathan Manaranche et Aurélien Hémidy">
        <meta name="keywords" content="">
        <meta name="copyright" content="Nathan Manaranche et Aurélien Hémidy">
        <meta name="language" content="fr">
        <link rel="shortcut icon" href="{{asset('build/images/favicon.png')}}">
        <meta name="viewport" content="width=device-width, initial-scale=1, minimal-ui">
        <link rel="stylesheet" href="https://bootswatch.com/4/cosmo/bootstrap.min.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.0/css/all.css" integrity="sha384-Mmxa0mLqhmOeaE8vgOSbKacftZcsNYDjQzuCOm6D02luYSzBG8vpaOykv9lFQ51Y" crossorigin="anonymous">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        {% block metadescription %}{% endblock %}
        {{ encore_entry_link_tags('app') }}
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <header>
            <div class="icon">
                <div class="hamburger"></div>
            </div>
            <div class="menu">
                <a href="{{path('index')}}"><img src="{{asset('build/images/logo2.png')}}"  alt="Site Icon">	</a>	
                <nav class="nav">
                    <ul>
                        <li><a href="#">Livrer</a></li>
                        <li><a href="{{path('adverts')}}">Se faire livrer</a></li>
                        {% if app.user %}
                        <li><a href="{{path('my_adverts')}}">Mes annonces</a></li>
                        <li><a href="{{path('my_deliveries')}}">Mes livraisons</a></li>
                        <li>Bonjour {{app.user.name}}</li>
                        {% endif %}
                        
                    </ul>
                </nav>
                <aside>
                    <i class="fas fa-sign-out-alt"></i>
                    {% if app.user %}
                        <a href="{{path('profile')}}" class="login">Mon compte</a>
                        <a href="{{path('logout')}}" class="login">Se déconnecter</a>
                    {% else %}
                        <a href="{{path('login')}}" class="login">Se connecter</a>
                        <a href="{{path('registration')}}" class="login">S'inscrire</a>
                    {% endif %}
                </aside>
                </nav>
            </div>
        </header>
        
        {% block body %}
                
        {% endblock %}
        
    
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
