{% extends "baseAdministrateur.html.twig" %}

{% block title %}Courses CDV{% endblock %}

{% block body %}

    <h1>Courses CDV</h1>

    <div class="container">
        <div class="row">
            <div class="col-1">ID</div>
            <div class="col-4">Livreur</div>
            <div class="col-3">Nombre de client</div>
            <div class="col-2">Modifier</div>
            <div class="col-2">Supprimer</div>
        </div>
        <br>
        {% for offer in offers %}
            <div class="row">
                <div class="col-1">{{offer.id}}</div>
                <div class="col-4">{{offer.user.name}}</div>
                <div class="col-3">{{offer.available}}</div>
                <div class="col-2">Modifier</div>
                <div class="col-2"><a href="#">Supprimer</a></div>
            </div>
        {% endfor %}
    </div>
{% endblock %}