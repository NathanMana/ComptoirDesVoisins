{% extends "base.html.twig" %}

{% block title %}Notifications{% endblock %}

{% block body %}

    <h1>Mes notifications</h1>
    
    {% if notifications is not empty %}   
        {% for item in notifications %}
            <article class="notification">
                <span>{{item.createdAt | date('j')}} {{item.createdAt | date('F') | trans}} {{item.createdAt | date('Y')}} Ã  {{ item.createdAt | date("G:h", "Europe/Paris") }}</span>
                <h2>{{item.object}}</h2>
                <p>{{item.message}}</p>
                <a class="delete" alt="suppression notification" href="{{path('deleteNotification', {id:item.id})}}"><button class="btn btn-sm">Supprimer la notification</button></a>
            </article>
        {% endfor %}
    {% else %}
        <p>Vous n'avez pas de notification</p>
    {% endif %}

{% endblock %}