{% extends "base.html.twig" %}

{% block title %}Informations sur ma livraison{% endblock %}

{% block body %}

    <h1>Vous livrez</h1>

    {% if advert.user.filename %}
        <img src="{{vich_uploader_asset(advert.user, 'imageFile')}}" alt="" style="width:150px;height:100px">  
    {% else %}
        <img src="{{asset('images/profile/default-avatar.png')}}" alt="" style="width:150px;height:100px">  
    {% endif %} 

    <h2>{{advert.user.name}}</h2>
    <h2>Tel : {{advert.user.phone}}</h2>

    <h3>Livraison prévue à {{advert.city}}</h3>

    <p>Son message : {{advert.message}}</p>
    
    {% if advert.cancellation %}
        <h5 style="color:green">Votre voisin a demandé à supprimer cet échange, confirmez-vous la suppression ?</h5>
        <a href="{{path('confirmCancellationAdvert', {id:advert.id})}}">Je confirme l'annulation de cet échange</a>
        <a href="#">Signaler un abus</a>
    {% endif %} 

    <a href="{{path('myDeliveries')}}">Retourner à mes échanges</a>

{% endblock %}