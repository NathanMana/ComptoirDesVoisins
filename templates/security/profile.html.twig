{% extends "base.html.twig" %}

{% block title %}Mon profil{% endblock %}

{% block body %}

<h1>Profil</h1>

    {% if app.user.filename %}
        <img src="{{ vich_uploader_asset(app.user, 'imageFile')}}" alt="" style="width:100px;height:75px">
    {% endif %}


    {{form_start(form)}}
    <fieldset>
        <div class="form-group">
            {{form_row(form.lastname, {'label': 'Nom de famille', 'attr': {'placeholder':'Nom de famille'}} )}}
        </div>    
        <div class="form-group">
            {{form_row(form.city, {'label': 'Ville', 'attr': {'placeholder':'Ville où vous habitez'}})}}
        </div>  
        <div class="form-group">
            {{form_row(form.phone, {'label': 'Numéro de téléphone', 'attr': {'placeholder':'0254872123'}})}}
        </div>
        <button type="submit">Sauvegarder les changements</button>
    </fieldet>
    {{form_end(form)}}

{% endblock %}