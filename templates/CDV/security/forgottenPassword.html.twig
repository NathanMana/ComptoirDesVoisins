{% extends "base.html.twig" %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}

    <div class="sm-section">
        <h1 class="block color-primary">Mot de passe oublié</h1>
        <article>
            {{form_start(form, {'attr': {'class' : 'form'}})}}
            <div class="col-12">
                {{form_row(form.email, {'label':'Indiquez votre adresse mail' , 'attr': {'placeholder': 'adresse@mail.fr'}})}}
            </div>
            <button type="submit">Envoyer</button>
            {{form_end(form)}}
        </article>
    </div>

{% endblock %}